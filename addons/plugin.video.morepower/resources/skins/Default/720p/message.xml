<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<animation effect="rotate" end="360" center="360,288" time="300">WindowOpen</animation>
	<animation effect="rotate" end="-360" center="360,288" time="300">WindowClose</animation>
	
    <defaultcontrol>201</defaultcontrol>
	<zorder>2</zorder>
	<coordinates>
        <system>1</system>
        <posx>54</posx>
        <posy>50</posy>
    </coordinates>
    <controls>
        <control type="image">
            <description>Dialog Background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1160</width>
            <height>615</height>
            <texture>background.jpg</texture>
        </control>
		<control type="image">
			<description>Window Banner</description>
			<posx>0</posx>
            <posy>0</posy>
            <width>1160</width>
            <height>180</height>
			<texture>header.jpg</texture>
		</control>
		<control type="label">
			<description>Latest News::</description>
            <posx>0</posx>
            <posy>165</posy>
            <width>130</width>
            <height>50</height>
            <font>font13</font>
            <textcolor>FFFFFFFF</textcolor>
            <aligny>center</aligny>
            <align>center</align>
			<label></label>
		</control>	
		
		<control type="label" id="100">
            <description>Caption</description>
            <posx>135</posx>
            <posy>165</posy>
            <width>1020</width>
            <height>50</height>
            <font>font13</font>
            <textcolor>FFFFFFFF</textcolor>
            <aligny>center</aligny>
            <align>center</align>
			<scroll>true</scroll>
        </control>
        <control type="textbox" id="200">
            <posx>0</posx>
            <posy>200</posy>
            <width>1120</width>
            <height>410</height>
            <pagecontrol>201</pagecontrol>
            <font>font13_title</font>
            <textcolor>FFFFFFFF</textcolor>
			<align>center</align>
        </control>
        <control type="scrollbar" id="201">
            <description>Message Scrollbar</description>
            <posx>1150</posx>
            <posy>70</posy>
            <width>7</width>
            <height>530</height>
            <texturesliderbackground>-</texturesliderbackground>
            <texturesliderbar>scrollbarv_bar.png</texturesliderbar>
            <texturesliderbarfocus>scrollbarv_bar_focus.png</texturesliderbarfocus>
            <textureslidernib>-</textureslidernib>
            <textureslidernibfocus>-</textureslidernibfocus>
            <orientation>vertical</orientation>
        </control>
    </controls>
</window>